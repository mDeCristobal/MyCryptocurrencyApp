<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/margin_288"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin_14"
    android:background="@android:color/transparent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/margin_288"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin_24"
        android:paddingBottom="@dimen/margin_16"
        >

        <TextView
            android:id="@+id/tvMessage"
            style="@style/Body.GrayDark.16"
            android:lineSpacingExtra="5sp"
            android:translationY="-2.62sp"
            android:layout_width="@dimen/no_margin"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="¿Seguro deseas eliminar la dirección?" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFirst"
            style="@style/ButtonGreenWithWhiteBorder"
            android:layout_width="@dimen/no_margin"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_button_round_gray_medium_radius_14"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMessage"
            android:gravity="center"
            tools:text="Si, eliminar" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>