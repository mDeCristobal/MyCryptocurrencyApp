<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyCryptocurrencyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Helvetica">
        <item name="android:fontFamily">@font/helvetica_regular</item>
    </style>

    <style name="Body">
        <item name="android:fontFamily">@font/helvetica_regular</item>
    </style>

    <style name="BodyBold">
        <item name="android:fontFamily">@font/helvetica_bold</item>
    </style>

    <style name="Body.GrayDark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BodyBold.GrayDark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Body.GrayDark.16">
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <style name="BodyBold.GrayDark.16">
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <style name="CallToAction">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:fontFamily">@font/helvetica_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonGreenWithWhiteBorder" parent="CallToAction">
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/ic_button_round_purple_with_white_border</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:layout_height">@dimen/margin_48</item>
        <item name="android:layout_width">@dimen/margin_0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="font">@style/Helvetica</item>
    </style>

</resources>